@model ProductListVM
@{
    ViewData["Title"] = "პროდუქტები";
}

<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <div class="row">
            <!-- ============================================================== -->
            <!-- products  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header fgnb fbold fsize-20">
                        <span class="card-title">ყველა პროდუქტი</span>
                        <a asp-action="Create" asp-controller="Product" class="float-right btn btn-success">დამატება</a>
                    </h5>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <form asp-action="Index">
                                <table class="table">
                                    <thead class="bg-light">
                                        <tr class="border-0">
                                            <th class="border-0 fga">#</th>
                                            <th class="border-0 fga">ფოტო</th>
                                            <th class="border-0 fga">დასახელება</th>
                                            <th class="border-0 fga">კოდი</th>
                                            <th class="border-0 fga">მწარმოებელი კომპანია</th>
                                            <th class="border-0 fga">იმპორტის თარიღი</th>
                                            <th class="border-0 fga">ფუნქცია</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <tr class="border-0">
                                            <th class="border-0 fga">

                                            </th>
                                            <th class="border-0 fga"></th>
                                            <th class="border-0 fga">
                                                <input type="text" name="searchName" value="@ViewBag.SearchName" class="form-control" />
                                            </th>
                                            <th class="border-0 fga">
                                                <input type="text" name="searchCode" value="@ViewBag.SearchCode" class="form-control" />
                                            </th>
                                            <th class="border-0 fga">
                                                <input type="text" name="searchBrand" value="@ViewBag.SearchBrand" class="form-control" />
                                            </th>
                                            <th class="border-0 fga"></th>
                                            <th class="border-0 fga">
                                                <button type="submit" class="btn btn-primary">ძებნა</button>
                                            </th>
                                        </tr>

                                        @foreach (var item in Model.Products)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(item.Image))
                                                    {
                                                        <div class="m-r-10"><img src="@item.Image" alt="user" class="rounded" width="45"></div>
                                                    }
                                                    else
                                                    {
                                                        <div class="m-r-10"><img src="../assets/images/product-pic.jpg" alt="user" class="rounded" width="45"></div>
                                                    }
                                                </td>
                                                <td>@item.Name</td>
                                                <td>@item.Code</td>
                                                <td>@item.Brand</td>
                                                <td>@item.ImportDate.ToString("dd.MM.yyyy")</td>
                                                <td>
                                                    <div class="dropdown">
                                                        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                            ქმედება
                                                        </a>

                                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                            <a class="dropdown-item" asp-route-id="@item.Id" asp-action="Detail" asp-controller="Product">დათვალიერება</a>
                                                            <a class="dropdown-item" asp-route-id="@item.Id" asp-action="Edit" asp-controller="Product">რედაქტირება</a>
                                                            <a class="dropdown-item" asp-route-id="@item.Id" asp-action="Delete" asp-controller="Product">წაშლა</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end of products  -->
            <!-- ============================================================== -->
        </div>
    </div>
</div>