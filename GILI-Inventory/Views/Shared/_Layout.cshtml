<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link href="~/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" href="~/assets/vendor/vector-map/jqvmap.css">
    <link rel="stylesheet" href="~/assets/vendor/jvectormap/jquery-jvectormap-2.0.2.css">
    <link rel="stylesheet" href="~/assets/vendor/fonts/flag-icon-css/flag-icon.min.css">
    <title>@ViewData["Title"] - სამართავი პანელი</title>
</head>

<body>
    <!-- ============================================================== -->
    <!-- main wrapper -->
    <!-- ============================================================== -->
    <div class="dashboard-main-wrapper">
        <!-- ============================================================== -->
        <!-- navbar -->
        <!-- ============================================================== -->
        <div class="dashboard-header">
            <nav class="navbar navbar-expand-lg bg-white fixed-top">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">GILI Inventory</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse " id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto navbar-right-top">
                        <li class="nav-item dropdown nav-user">
                            <a class="nav-link nav-user-img" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img src="~/assets/images/avatar-1.jpg" alt="" class="user-avatar-md rounded-circle"></a>
                            <div class="dropdown-menu dropdown-menu-right nav-user-dropdown" aria-labelledby="navbarDropdownMenuLink2">
                                @if (User?.Identity?.IsAuthenticated ?? false)
                                {
                                <div class="nav-user-info">
                                    <h5 class="mb-0 text-white nav-user-name">@User.Identity.Name</h5>
                                </div>
                                <a class="dropdown-item fga" asp-action="Logout" asp-controller="Account"><i class="fas fa-power-off mr-2"></i>გამოსვლა</a>
                                }
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <!-- ============================================================== -->
        <!-- end navbar -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- left sidebar -->
        <!-- ============================================================== -->
        <div class="nav-left-sidebar sidebar-dark">
            <div class="menu-list">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="d-xl-none d-lg-none fgnb fbold" asp-controller="Home" asp-action="Index">მთავარი გვერდი</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav flex-column">
                            <li class="nav-divider">
                                Menu
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link fgnb fbold @Html.IsActiveRoute(actions: "Index", controllers: "Home")" asp-action="Index" asp-controller="Home"><i class="fa fa-fw fa-tachometer-alt fsize-16 fmove-icon"></i>მთავარი გვერდი</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link fgnb fbold @Html.IsActiveRoute(actions: "Index", controllers: "Product")" asp-controller="Product" asp-action="Index"><i class="fa fa-fw fa-list-ul fsize-16 fmove-icon"></i>პროდუქტები</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link fgnb fbold  @Html.IsActiveRoute(actions: "Index", controllers: "Shop")" asp-controller="Shop" asp-action="Index"><i class="fa fa-fw fa-shopping-cart fsize-16 fmove-icon"></i>მაღაზიები</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link fgnb fbold  @Html.IsActiveRoute(actions: "Index", controllers: "User")" asp-controller="User" asp-action="Index"><i class="fa fa-fw fa-user fsize-16 fmove-icon"></i>მომხმარებლები</a>
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link fgnb fbold" asp-action="Logout" asp-controller="Account"><i class="fa fa-fw fa-sign-out-alt fsize-16 fmove-icon"></i>გამოსვლა</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end left sidebar -->
        <!-- ============================================================== -->

        <!-- Render Content -->
        @RenderBody()
        <!-- End of Render Content -->

            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">

                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                            <div class="text-md-right footer-links d-none d-sm-block">
                                Developed by  <a href="https://github.com/khurtsidzecms/GILI-Inventory" class="fbold">GILI Team</a>.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- end footer -->
            <!-- ============================================================== -->
        </div>
        <!-- ============================================================== -->
        <!-- end wrapper  -->
        <!-- ============================================================== -->
    
    <!-- ============================================================== -->
    <!-- end main wrapper  -->
    <!-- ============================================================== -->
    <!-- Optional JavaScript -->
    <!-- jquery 3.3.1 js-->
    <script src="~/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <!-- bootstrap bundle js-->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <!-- slimscroll js-->
    <script src="~/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <!-- chartjs js-->
    <script src="~/assets/vendor/charts/charts-bundle/Chart.bundle.js"></script>
    <script src="~/assets/vendor/charts/charts-bundle/chartjs.js"></script>

    <!-- main js-->
    <script src="~/assets/libs/js/main-js.js"></script>
    <!-- jvactormap js-->
    <script src="~/assets/vendor/jvectormap/jquery-jvectormap-2.0.2.min.js"></script>
    <script src="~/assets/vendor/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- sparkline js-->
    <script src="~/assets/vendor/charts/sparkline/jquery.sparkline.js"></script>
    <script src="~/assets/vendor/charts/sparkline/spark-js.js"></script>
    <!-- dashboard sales js-->
    <script src="~/assets/libs/js/dashboard-sales.js"></script>
    <!-- Custom JS-->
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>